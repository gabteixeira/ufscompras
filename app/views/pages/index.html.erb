<%= render 'shared/navbar' %>

<main >
<div class="container h-100">
      <div class="d-flex justify-content-center h-100">
      <div class="text-center"> <img alt="UFSCompra" class="rounded mx-auto d-block" style="width:600px" src="<%= asset_path 'ufscompra.png' %>"></div><br>
            <% if user_signed_in? %>
              <p>Olá <%= current_user.nome %>, procura algo?</p>
            <% end %>
        <div class="searchbar">
          <input class="search_input" type="text" name="" placeholder="Buscar anúncio...">
          <a href="#" class="search_icon">
            <img alt="OK" src="<%= asset_path 'LUPA-512.png' %>" style="width:30px" >
          <i class="fas fa-search"></i></a>
        </div>
      </div>
    </div>
     
  <div class="container">
    <h2>Destaques</h2>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
    
    <div class="carousel-inner">
        <%i=0%>
        <% @posts.order(:cached_votes_score => :desc).each do |post| %>
        <%if i== 3%>
          <%break%>
        <%end%>
       <%if i==0%> 
      <div class="item active">
       <center><%= image_tag(post.image_url(:index).to_s, alt:post.titulo, size:'500',title: post.titulo) %>
                <div class="carousel-caption d-none d-md-block">
                  <h2><%= link_to post.titulo, post %> </h2>
                  <h4>R$ <%= post.preco %></h4>
              </div>
       <center>
      </div>
      <%end%>
      <%if i>=1%>
      <div class="item">
       <center><%= image_tag(post.image_url(:index).to_s,alt:post.titulo, size:'500',title: post.titulo) %>
          <div class="carousel-caption d-none d-md-block">
                  <h2><%= link_to post.titulo, post %></h2>
              </div>
       </center>
      </div>
      <%end%>
      <%i+=1%>
   <%end%>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

</main>

<%= render 'shared/footer'%>
