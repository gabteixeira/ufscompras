<%=render 'shared/navbar'%>
<div class='container text-center'>
<p id="notice"><%= notice %></p>

<h1><%= @post.titulo %> </h1>
<div>
    <p><%= image_tag(@post.image_url(:visao).to_s) %></p>
    <p><%= @post.conteudo %></p>
    <p><b>PREÇO:</b><%= @post.preco %></p>
    <p><b>Telefone:</b><%= @post.contato %></p>
    <p><b>Email:</b><%=@post.user.email%></p>
</div>



<p>
  <%= image_tag(@post.user.image_url(:thumb).to_s) %>
  <strong>Autor</strong>
  <%= @post.user.nome %> <%=@post.user.sobrenome%>
</p>
<%= link_to like_post_path(@post), class:"like", method: :put do%><button type="button" class="btn btn-primary">APOIAR</button><%end%>
<p><%= @post.get_upvotes.size%> usuários apoiaram</p>
<% if @post.user == current_user %>
  <%= link_to 'Editar', edit_post_path(@post) %> |
<% end %>

<%= link_to 'Retornar', posts_path %>
</div>
<%=render 'comments/comment'%>
<%=render 'shared/footer'%>
